    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>enforce-java-version</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-jar</id>
                    </execution>
                    <execution>
                        <id>test-jar</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources-schema</id>
                    </execution>
                    <execution>
                        <id>copy-resources-schematron</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.schematronDirectory}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.schematronSourceDirectory}</directory>
                                    <includes>
                                        <include>**/*.sch</include>
                                        <include>**/*.xml</include>
                                        <include>**/*.xsd</include>
                                        <include>**/*.xsl</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-sources</id>
                    </execution>
                    <execution>
                        <id>test-jar-sources</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <configuration>
                            <suiteXmlFiles combine.self="override">
                                <suiteXmlFile>${project.build.testOutputDirectory}/META-INF/crigtt/testng/testng-crigtt.xml</suiteXmlFile>
                            </suiteXmlFiles>
                            <systemPropertyVariables>
                                <crigtt.logging.file.name>crigtt-test.log</crigtt.logging.file.name>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-integration</id>
                        <configuration>
                            <suiteXmlFiles combine.self="override">
                                <suiteXmlFile>${project.build.testOutputDirectory}/META-INF/crigtt/testng/testng-crigtt-it.xml</suiteXmlFile>
                            </suiteXmlFiles>
                            <systemPropertyVariables>
                                <crigtt.logging.file.name>crigtt-test-it.log</crigtt.logging.file.name>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <dependencies>
                    <dependency>
                        <groupId>org.glassfish.jaxb</groupId>
                        <artifactId>jaxb-xjc</artifactId>
                        <version>2.2.11</version>
                        <exclusions>
                            <exclusion>
                                <groupId>com.sun.istack</groupId>
                                <artifactId>istack-commons-tools</artifactId>
                            </exclusion>
                            <exclusion>
                                <groupId>com.sun.xml.dtd-parser</groupId>
                                <artifactId>dtd-parser</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    <dependency>
                        <groupId>org.jvnet.annox</groupId>
                        <artifactId>annox</artifactId>
                        <version>1.0.1</version>
                    </dependency>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-basics</artifactId>
                        <version>0.9.4</version>
                    </dependency>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-basics-annotate</artifactId>
                        <version>1.0.1</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>generate-sources-jaxb-crigtt</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <properties>
                                <property>
                                    <name>bindingIncludes</name>
                                    <value>
                                        crigtt.xjb
                                        crigtt/crigtt-validate.xjb
                                    </value>
                                </property>
                                <property>
                                    <name>outDir</name>
                                    <value>${project.build.jaxbCrigttGeneratedSourceDirectory}</value>
                                </property>
                                <property>
                                    <name>pkgNames</name>
                                    <value>
                                        validate=gov.hhs.onc.crigtt.validate
                                    </value>
                                </property>
                                <property>
                                    <name>schemaIncludes</name>
                                    <value>
                                        crigtt/crigtt-validate.xsd
                                    </value>
                                </property>
                                <property>
                                    <name>xmlNsPrefixes</name>
                                    <value>
                                        validate=gov.hhs.onc.crigtt.xml.CrigttXmlNs.VALIDATE_PREFIX
                                    </value>
                                </property>
                                <property>
                                    <name>xmlNsUris</name>
                                    <value>
                                        validate=gov.hhs.onc.crigtt.xml.CrigttXmlNs.VALIDATE_URI
                                    </value>
                                </property>
                            </properties>
                            <scripts>
                                <script>file://${project.build.groovyScriptSourceDirectory}/crigtt-generate-sources-jaxb.groovy</script>
                            </scripts>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-sources-jaxb-schematron</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <properties>
                                <property>
                                    <name>bindingIncludes</name>
                                    <value>
                                        crigtt.xjb
                                        iso-schematron/schematron.xjb
                                        iso-schematron/svrl.xjb
                                    </value>
                                </property>
                                <property>
                                    <name>outDir</name>
                                    <value>${project.build.jaxbSchematronGeneratedSourceDirectory}</value>
                                </property>
                                <property>
                                    <name>pkgNames</name>
                                    <value>
                                        schematron=gov.hhs.onc.crigtt.schematron
                                        schematronSvrl=gov.hhs.onc.crigtt.schematron.svrl
                                    </value>
                                </property>
                                <property>
                                    <name>schemaIncludes</name>
                                    <value>
                                        iso-schematron/schematron.xsd
                                        iso-schematron/svrl.xsd
                                    </value>
                                </property>
                                <property>
                                    <name>xmlNsPrefixes</name>
                                    <value>
                                        schematron=gov.hhs.onc.crigtt.xml.CrigttXmlNs.SCHEMATRON_PREFIX
                                        schematronSvrl=gov.hhs.onc.crigtt.xml.CrigttXmlNs.SCHEMATRON_SVRL_PREFIX
                                    </value>
                                </property>
                                <property>
                                    <name>xmlNsUris</name>
                                    <value>
                                        schematron=gov.hhs.onc.crigtt.xml.CrigttXmlNs.SCHEMATRON_URI
                                        schematronSvrl=gov.hhs.onc.crigtt.xml.CrigttXmlNs.SCHEMATRON_SVRL_URI
                                    </value>
                                </property>
                            </properties>
                            <scripts>
                                <script>file://${project.build.groovyScriptSourceDirectory}/crigtt-generate-sources-jaxb.groovy</script>
                            </scripts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>