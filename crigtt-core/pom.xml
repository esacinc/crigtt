    <parent>
        <groupId>gov.hhs.onc.crigtt</groupId>
        <artifactId>crigtt-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../crigtt-parent</relativePath>
    </parent>
    
    <artifactId>crigtt-core</artifactId>
    
    <description>Cancer Registry IG Test Tool (CRIGTT) common components Maven project.</description>
    
    <properties>
        <!-- Project properties -->
        <project.basedir.all>${project.basedir}/..</project.basedir.all>
        <!-- Project build JAXB source properties -->
        <project.build.jaxbCrigttGeneratedSourceDirectory>${project.build.directory}/generated-sources/jaxb-crigtt</project.build.jaxbCrigttGeneratedSourceDirectory>
        <project.build.jaxbSchematronGeneratedSourceDirectory>${project.build.directory}/generated-sources/jaxb-schematron</project.build.jaxbSchematronGeneratedSourceDirectory>
        <!-- Project build Schematron properties -->
        <project.build.schematronDirectory>${project.build.outputDirectory}/META-INF/crigtt/schematron</project.build.schematronDirectory>
        <!-- Project build Schematron source properties -->
        <project.build.schematronSourceDirectory>${project.basedir}/src/main/schematron</project.build.schematronSourceDirectory>
    </properties>
    
