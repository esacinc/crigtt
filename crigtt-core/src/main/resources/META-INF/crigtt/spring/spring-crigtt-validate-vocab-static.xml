<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:lang="http://www.springframework.org/schema/lang"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = CACHE MANAGERS
    =====================================================================================================-->
    <!--suppress SpringPlaceholdersInspection -->
    <beans:bean id="cacheManagerValidateVocabStatic" parent="cacheManagerCrigtt"
        p:maxBytesLocalHeap="${crigtt.cache.validate.vocab.static.heap.max.bytes}">
        <beans:property name="configuration">
            <beans:bean parent="cacheManagerConfig"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = CACHES
    =====================================================================================================-->
    <beans:bean id="cacheValidateVocabVocabSetStatic" parent="cacheValidateVocabVocabSet"
        p:manager-ref="cacheManagerValidateVocabStatic">
        <beans:property name="configuration">
            <beans:bean parent="cacheConfigCrigtt"/>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="cacheValidateVocabCodeStatic" parent="cacheValidateVocabCode"
        p:manager-ref="cacheManagerValidateVocabStatic">
        <beans:property name="configuration">
            <beans:bean parent="cacheConfigCrigtt"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = STATIC VOCABULARY SERVICES
    =====================================================================================================-->
    <beans:bean id="vocabServiceStatic" class="gov.hhs.onc.crigtt.validate.vocab.StaticVocabService" parent="vocabService" abstract="true"/>
    
    <beans:bean id="vocabServiceStaticImpl" class="gov.hhs.onc.crigtt.validate.vocab.impl.StaticVocabServiceImpl" parent="vocabServiceStatic"
        abstract="true"/>
    
    <beans:bean id="vocabServiceStaticCrigtt" parent="vocabServiceStaticImpl"
        p:assertionSource="classpath*:META-INF/crigtt/data/validate/vocab/crigtt-validate-vocab-assertions-static.xml"
        p:codeCache-ref="cacheValidateVocabCodeStatic"
        p:vocabSetCache-ref="cacheValidateVocabVocabSetStatic">
        <beans:property name="document">
            <beans:bean parent="doc" factory-bean="docBuilderCrigtt" factory-method="build"
                c:src="classpath*:META-INF/crigtt/schematron/ccda-r2-cancer-reg/voc.xml"
                p:uri="voc.xml"/>
        </beans:property>
    </beans:bean>
</beans:beans>